{
    "name": "@harnyk/telegram-notifier-mcp",
    "version": "0.1.0",
    "description": "MCP server for sending Telegram messages as a bot",
    "title": "Telegram Notifier Server",
    "type": "module",
    "main": "dist/server.js",
    "bin": {
        "telegram-notifier": "dist/server.js"
    },
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "dev": "tsx src/server.ts",
        "start": "node dist/server.js",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "prepare": "npm run build"
    },
    "files": [
        "dist",
        "src",
        "package.json",
        "README.md",
        "llm-texts"
    ],
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.1",
        "axios": "^1.10.0",
        "zod": "3.25.76"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@types/node": "^22.7.4",
        "@typescript-eslint/eslint-plugin": "^8.41.0",
        "@typescript-eslint/parser": "^8.41.0",
        "eslint": "^9.34.0",
        "eslint-plugin-n": "^17.21.3",
        "tsx": "^4.20.3",
        "typescript": "^5.9.2"
    }
}
